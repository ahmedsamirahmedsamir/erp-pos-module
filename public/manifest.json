{
  "name": "LinearBits POS Terminal",
  "short_name": "POS Terminal",
  "description": "Professional Point of Sale Terminal with offline capabilities",
  "start_url": "/pos/terminal",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/pos/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["business", "productivity", "shopping"],
  "icons": [
    {
      "src": "/pos/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/pos/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/pos/screenshots/pos-terminal-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "POS Terminal Desktop View"
    },
    {
      "src": "/pos/screenshots/pos-terminal-mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "POS Terminal Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "New Transaction",
      "short_name": "New Sale",
      "description": "Start a new POS transaction",
      "url": "/pos/terminal?action=new",
      "icons": [
        {
          "src": "/pos/icons/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Reports",
      "short_name": "Reports",
      "description": "View POS reports and analytics",
      "url": "/pos/reports",
      "icons": [
        {
          "src": "/pos/icons/shortcut-reports.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Cash Drawer",
      "short_name": "Drawer",
      "description": "Open cash drawer management",
      "url": "/pos/cash-drawer",
      "icons": [
        {
          "src": "/pos/icons/shortcut-drawer.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://pos.linearbits.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/pos/terminal",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "pos",
      "url": "/pos/terminal?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/pos/terminal",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/csv", "application/json"]
        }
      ]
    }
  }
}